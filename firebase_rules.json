{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
      }
    },
    "products": {
      ".read": "auth != null",
      "$productId": {
        ".write": "auth != null && data.child('merchantId').val() == auth.uid || newData.child('merchantId').val() == auth.uid"
      }
    },
    "orders": {
      ".read": "auth != null",
      "$orderId": {
        ".write": "auth != null"
      }
    },
    "fish_inventory": {
      ".read": "auth != null",
      "$fishId": {
        ".write": "auth != null"
      }
    },
    ".read": false,
    ".write": false
  }
}
